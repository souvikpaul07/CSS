            flex-shrink: 10;
        }
        .container_2{
            display:flex;
            flex-direction: row;
            margin:0px 70px 70px 70px;
            justify-content: space-around;
            align-content: center;
            flex-shrink: 10;
        }
        .box{
            width:30%;
            height:60%;
            align-self:center;
            text-align: center;
            border-radius: 15px;
            background-color:#f3e0dc; 
            padding-bottom:20px;
            box-shadow: 5px 5px 20px rgb(7, 182, 182);
        }
        img{
            object-fit: contain;
        }
        #imagebox_1{
            clip-path: circle(37.1% at 54% 53%);
            max-width:75%;
            width:min-content;
            align-self: center;
            height: auto;
        }
        #imagebox_2{
            clip-path: circle(43.6% at 49% 50%);
            max-width:80%;
            width:min-content;
            align-self: center;
            height: auto;
        }
        #imagebox_3{
            clip-path: circle(34.5% at 50% 48%);
            max-width:85%;
            width:min-content;
            align-self: center;
            height: auto;
        }
        #imagebox_4{
